<div class="main-chat-header">
  <div class="header-title">
    ホゲ
  </div>
  <div class="btn-finish">
    <a href="#">チャットを終了する</a>
  </div>
</div>

<div class="main-chat-body">
  <div class="message-list">
    <div class="upper-content">
      <h3 class="created-name">shotaro</h3>
      <h3 class="created-at">2021/3/10(Wed) 11:25:43</h3>
    </div>  
    <div class="bottom-content">
      <p>おはよう</p>
    </div>  
  </div>
</div>
  
 

<%= form_with model: [@room, @message], class: 'message', local: true do |f| %>
  <div class="message-box">
    <%= f.text_field :content, class: 'create-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'btn-send' %>
<% end %>
